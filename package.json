{
  "name": "zigbee2mqtt",
  "version": "1.20.0-dev",
  "description": "Zigbee to MQTT bridge using Zigbee-herdsman",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Koenkk/zigbee2mqtt.git"
  },
  "engines": {
    "node": "^10 || ^12 || ^14 || ^15 || ^16"
  },
  "keywords": [
    "xiaomi",
    "tradfri",
    "hue",
    "bridge",
    "zigbee",
    "mqtt",
    "cc2531"
  ],
  "scripts": {
    "build": "node_modules/.bin/tsc && node index.js writehash",
    "build-watch": "node_modules/.bin/tsc --watch",
    "eslint": "node_modules/.bin/eslint lib/ --max-warnings=0",
    "start": "node index.js",
    "test-with-coverage": "jest test --coverage",
    "test": "jest test",
    "test-watch": "jest test --watch"
  },
  "author": "Koen Kanters",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Koenkk/zigbee2mqtt/issues"
  },
  "homepage": "https://koenkk.github.io/zigbee2mqtt",
  "dependencies": {
    "ajv": "^8.12.0",
    "debounce": "^2.0.0",
    "deep-object-diff": "^1.1.9",
    "fast-deep-equal": "^3.1.3",
    "finalhandler": "^1.2.0",
    "git-last-commit": "^1.0.1",
    "humanize-duration": "^3.32.0",
    "js-yaml": "^4.1.0",
    "json-stable-stringify-without-jsonify": "^1.0.1",
    "mkdir-recursive": "^0.4.0",
    "moment": "^2.30.1",
    "mqtt": "5.5.0",
    "object-assign-deep": "^0.4.0",
    "rimraf": "^5.0.5",
    "semver": "^7.6.0",
    "serve-static": "^1.15.0",
    "source-map-support": "^0.5.21",
    "winston": "^3.13.0",
    "winston-syslog": "^2.7.0",
    "ws": "^8.16.0",
    "zigbee-herdsman": "0.40.2",
    "zigbee-herdsman-converters": "19.10.0",
    "zigbee2mqtt-frontend": "0.6.161"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-typescript": "^7.24.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/object-assign-deep": "^0.4.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "tmp": "^0.2.3",
    "typescript": "^5.4.3"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "lib/**/*.js"
    ]
  },
  "bin": {
    "zigbee2mqtt": "cli.js"
  }
}
